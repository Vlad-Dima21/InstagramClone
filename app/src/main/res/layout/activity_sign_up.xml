<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="289dp"
        android:layout_height="486dp"
        android:layout_marginTop="20dp"
        android:clipChildren="false"
        app:columnCount="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="6">

        <EditText
            android:id="@+id/edtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Name of the kickboxer"
            android:inputType="textPersonName"
            app:layout_column="0"
            app:layout_gravity="center_horizontal"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <EditText
            android:id="@+id/edtPunchSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Punch speed"
            android:inputType="number"
            app:layout_column="0"
            app:layout_gravity="center_horizontal"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <EditText
            android:id="@+id/edtKickSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Kick speed"
            android:inputType="number"
            app:layout_column="0"
            app:layout_gravity="center_horizontal"
            app:layout_row="3"
            app:layout_rowWeight="1" />

        <EditText
            android:id="@+id/edtKickPower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Kick power"
            android:inputType="number"
            app:layout_column="0"
            app:layout_gravity="center_horizontal"
            app:layout_row="4"
            app:layout_rowWeight="1" />

        <EditText
            android:id="@+id/edtPunchPower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Punch power"
            android:inputType="number"
            app:layout_column="0"
            app:layout_gravity="center_horizontal"
            app:layout_row="2"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#FF5722"
            android:text="Save kickboxer"
            app:layout_column="0"
            app:layout_gravity="center_horizontal"
            app:layout_row="5"
            app:layout_rowWeight="1" />
    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>