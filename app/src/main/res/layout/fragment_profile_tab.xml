<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileTab">


    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:columnCount="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="6">

        <EditText
            android:id="@+id/edtProfileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Profile name..."
            android:inputType="textPersonName"
            android:textSize="22sp"
            app:layout_gravity="center_horizontal" />

        <EditText
            android:id="@+id/edtProfileBio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Profile bio..."
            android:inputType="textPersonName"
            android:textSize="22sp"
            app:layout_gravity="center_horizontal" />

        <EditText
            android:id="@+id/edtProfileProfession"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Profession..."
            android:inputType="textPersonName"
            android:textSize="22sp"
            app:layout_gravity="center_horizontal" />

        <EditText
            android:id="@+id/edtProfileHobbies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Hobbies..."
            android:inputType="textPersonName"
            android:textSize="22sp"
            app:layout_gravity="center_horizontal" />

        <EditText
            android:id="@+id/edtProfileSport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Favourite Sport..."
            android:inputType="textPersonName"
            android:textSize="22sp"
            app:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/btnUpdateProfileInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Update info"
            android:textSize="20sp"
            app:layout_gravity="center_horizontal" />
    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>